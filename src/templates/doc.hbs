              </ul>
            </li>
          </ul>
        </div>
      </div>
      <div class="main col-sm-9" role="main">
        {{{body}}}
      </div>
    </div>
  </div>

  {{#append "scripts"}}
  <script src="{{asset "js/prism.js"}}"></script>
  {{/append}}
{{/extend}}
